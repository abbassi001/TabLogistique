{% extends 'colis_wizard/layout.html.twig' %}

{% block step_title %}Étape 2 : Informations de l'expéditeur{% endblock %}

{% block step_content %}
    <p class="text-muted mb-4">
        Veuillez saisir les informations concernant l'expéditeur du colis. Les champs marqués d'un * sont obligatoires.
    </p>

    {{ form_start(form, {'attr': {'id': 'wizard_form', 'class': 'needs-validation'}}) }}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom_entreprise_individu) }}
                    {{ form_widget(form.nom_entreprise_individu, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom_entreprise_individu) }}
                    <div class="form-text">Nom de l'entreprise ou de l'individu qui envoie le colis.</div>
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.telephone) }}
                    <div class="form-text">Numéro de téléphone joignable en cas de besoin.</div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.pays) }}
                    {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.pays) }}
                </div>
                
                <div class="mb-3">
                    {{ form_label(form.adresse_complete) }}
                    {{ form_widget(form.adresse_complete, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    {{ form_errors(form.adresse_complete) }}
                    <div class="form-text">Adresse complète incluant la rue, la ville, le code postal et le pays.</div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
    {# Ajout de votre fichier JavaScript de wizard #}
{% block javascripts %}
    {# JavaScript de base #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    {# Votre fichier wizard.js #}
    <script src="{{ asset('javascript/wizard.js') }}"></script>
    
    {# Scripts additionnels spécifiques à chaque page #}
    {% block page_scripts %}{% endblock %}
{% endblock %}
{% endblock %}